public class Config
{
    private String carlSourcePath;
    private String manualPath;
    private String modulesPath;

    public Config()
    {
        this.carlSourcePath = "@carl_INCLUDE_DIR@";
        this.manualPath = "@SMTRAT_MANUAL_PATH@";
        this.modulesPath = "@SMTRAT_MODULES_PATH@";
    }
    
    public String getCarlSourcePath()
    {
        return this.carlSourcePath;
    }
    
    public String getManualPath()
    {
        return this.manualPath;
    }
    
    public String getModulesPath()
    {
        return this.modulesPath;
    }
}